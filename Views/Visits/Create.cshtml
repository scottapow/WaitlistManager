
@model WaitlistManager.Models.Visit

@{
    ViewData["Title"] = "Create";
    var barbers = (IEnumerable<SelectListItem>)ViewData["BarberId"];
}


<div class="text-center">
    <h1>Sign In</h1>
    <a asp-action="Index"><h4>Back to List</h4></a>
</div>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-sm-4 control-label" for="FirstName">First Name</label>
            <div class="col-sm-8">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-sm-4 control-label"></label>
            <div class="col-sm-8">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BarberId" class="col-sm-4 control-label"></label>
            <div class="col-sm-8">
                <select asp-for="BarberId" asp-items="barbers" class="form-control">
                    <option> </option>
                </select>
                <span asp-validation-for="BarberId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
