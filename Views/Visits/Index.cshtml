@model IEnumerable<WaitlistManager.Models.Visit>

@{
    ViewData["Title"] = "Waitlist Manager";
}

<h2>Derby City Chop Shop</h2>
<h3>Sign in below</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BarberId)
        </th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Barber.FullName)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.VisitId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.VisitId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.VisitId">Delete</a>
        </td>
    </tr>
}

            

</table>
<hr />
<a asp-action="Create"><h1 class="text-center">Sign In</h1></a>
