@model WaitlistManager.Models.Shop

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h5>Set up your Barber Shop</h5>
</div>
<div class="row">
    <div class="well col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">
        <form asp-action="Index" class="form-horizontal">
            <hr />
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <h3> First, just enter your barbershop's name <br /><br /><small>Be careful, this can't be undone</small></h3>
            <div class="form-group">
                <label asp-for="ShopName" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="ShopName" class="form-control" />
                    <span asp-validation-for="ShopName" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
