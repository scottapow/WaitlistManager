@model WaitlistManager.Models.Barber

@{
    ViewData["Title"] = "Create";
}

<h2>New Barber</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-md-2 control-label" for="FullName">Name (first and last)</label>
            <div class="col-md-10">
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger" />
                <p class="help-block">Use the format: "First Last"</p>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Bio" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Bio" class="text-danger" />
                <p class="help-block">Keep it under 400 characters and try to make yourself look good</p>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CutsF" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CutsF" type="checkbox" />  
                <span class="text-muted pad-left-5px"> Check the box if you cut womens' hair</span> 
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CutsM" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CutsM" type="checkbox"/> 
                <span class="text-muted pad-left-5px"> Check the box if you cut mens' hair</span> 
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger" />
                <p class="help-block">Choose a 5-digit numerical password</p>
            </div>
        </div>
        <div class="form-group" >
            <label asp-for="ProfilePicPath" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="file" id="ProfilePicPath" name="image" />
                <span asp-validation-for="ProfilePicPath" class="text-danger" />
                <p class="help-block">Choose a nice picture of yourself</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Finish" class="btn btn-success btn-lg" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
